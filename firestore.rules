
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'ahsan.khan@mitwpu.edu.in';
    }

    function isApprovedCounsellor() {
      return isSignedIn() && exists(/databases/$(database)/documents/counsellors/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/counsellors/$(request.auth.uid)).data.status == 'approved';
    }

    // Counsellors Collection
    // - Anyone can read the list of approved counsellors
    // - Only admins can manage the counsellor documents
    match /counsellors/{counsellorId} {
      allow read: if isSignedIn() && resource.data.status == 'approved';
      allow list: if isSignedIn();
      allow write: if isAdmin();
    }

    // Journal Entries Collection
    // - Users can only manage their own entries
    // - Admins can read entries
    match /journalEntries/{entryId} {
      allow read, write: if isOwner(resource.data.userId);
      allow list: if isSignedIn() && request.query.where.size() == 1 && 'userId' in request.query.where && request.query.where.userId == request.auth.uid;
      allow read: if isAdmin(); // Admin can read for review purposes
    }

    // Questionnaires Collection
    // - Users can only manage their own questionnaires
    // - Admins can read questionnaires
    match /questionnaires/{questionnaireId} {
      allow read, write: if isOwner(resource.data.userId) || isAdmin();
      allow list: if isSignedIn() && request.query.where.size() == 1 && 'userId' in request.query.where && request.query.where.userId == request.auth.uid;
      allow read: if isAdmin();
    }

    // Bookings Collection
    // - Users can create their own bookings
    // - Users can view their own bookings
    // - Users can cancel their own bookings (update status to 'Cancelled')
    // - Counsellors can manage bookings assigned to them
    match /bookings/{bookingId} {
      allow create: if isOwner(request.resource.data.student_id);
      allow read: if isOwner(resource.data.student_id) || isApprovedCounsellor() && resource.data.counsellor_id == request.auth.uid;
      allow list: if (isSignedIn() && request.query.where.size() == 1 && 'student_id' in request.query.where && request.query.where.student_id == request.auth.uid) ||
                     (isApprovedCounsellor() && request.query.where.size() == 1 && 'counsellor_id' in request.query.where && request.query.where.counsellor_id == request.auth.uid);
      allow update: if (isApprovedCounsellor() && resource.data.counsellor_id == request.auth.uid) || 
                       (isOwner(resource.data.student_id) && request.resource.data.appointment_status == 'Cancelled');
    }

    // Posts and Comments
    // - Anyone signed in can read posts and comments
    // - Users can create posts and comments
    // - Users can only update the commentCount on a post
    // - Users can only delete their own posts and comments
    // - Admins can delete any post or comment
    match /posts/{postId} {
      allow read, create: if isSignedIn();
      allow update: if isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['commentCount']);
      allow delete: if isOwner(resource.data.authorId) || isAdmin();
      
      match /comments/{commentId} {
        allow read, create: if isSignedIn();
        allow delete: if isOwner(resource.data.authorId) || isAdmin();
        allow update: if isAdmin(); // Admin can hide comments
      }
    }
  }
}
