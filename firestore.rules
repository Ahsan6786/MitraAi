
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check for the owner
    function isOwner() {
      return request.auth != null && request.auth.token.email == 'ahsanimamkhan06@gmail.com';
    }

    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      
      // Only the author or the owner can delete a post
      allow delete: if request.auth.uid == resource.data.authorId || isOwner();

      // Only the author can update post content (e.g., for editing)
      allow update: if request.auth.uid == resource.data.authorId;

      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null;

        // Only the author of the comment or the owner can delete a comment
        allow delete: if request.auth.uid == resource.data.authorId || isOwner();
        
        // Only the owner can hide/unhide a comment by updating the 'hidden' field
        allow update: if isOwner() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['hidden']);
      }
    }
  }
}
