rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to create/delete their own posts, and the owner to delete any post.
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      // Allow post author to delete their own post.
      allow delete: if request.auth.uid == resource.data.authorId;
      // Allow any authenticated user to update ONLY the commentCount field.
      allow update: if request.auth != null && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['commentCount']);
      
      // Allow users to create comments and the owner to hide/unhide them.
      match /comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        // Allow comment author to delete their own comment.
        allow delete: if request.auth.uid == resource.data.authorId;
        // Allow the owner to update the 'hidden' field for moderation.
        allow update: if request.auth.token.email == 'ahsanimamkhan06@gmail.com' && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['hidden']);
      }
    }
  }
}