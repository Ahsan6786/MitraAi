
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin user
    function isAdmin() {
      return request.auth.token.email == 'ahsan.khan@mitwpu.edu.in';
    }

    // Journal Entries
    match /journalEntries/{entryId} {
      // Any authenticated user can create a journal entry for themselves.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Users can read, update, and delete their own entries.
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;

      // Admin can read and update any entry for review purposes.
      allow read, update: if isAdmin();
    }

    // Community Posts
    match /posts/{postId} {
      // Any authenticated user can read all posts.
      allow list, get: if request.auth != null;

      // Any authenticated user can create a post.
      allow create: if request.auth != null;

      // Only the author of a post can delete it.
      allow delete: if request.auth != null && resource.data.authorId == request.auth.uid;

      // Allow updating the comment count
      allow update: if request.auth != null;

      // Comments sub-collection
      match /comments/{commentId} {
        // Any authenticated user can read comments.
        allow list, get: if request.auth != null;
        // Any authenticated user can create a comment.
        allow create: if request.auth != null;
      }
    }
  }
}
