rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to read, create, and update their own journal entries
    match /journalEntries/{entryId} {
      allow read, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.email == 'ahsan.khan@mitwpu.edu.in');
    }
    
    // Allow admin to read all journal entries and questionnaires
    match /journalEntries/{entryId} {
      allow read: if request.auth != null && request.auth.token.email == 'ahsan.khan@mitwpu.edu.in';
    }
    match /questionnaires/{questionnaireId} {
        allow read: if request.auth != null && request.auth.token.email == 'ahsan.khan@mitwpu.edu.in';
    }
    match /questionnaires/{questionnaireId} {
      allow update: if request.auth != null && request.auth.token.email == 'ahsan.khan@mitwpu.edu.in';
    }

    // Allow users to create their own questionnaire submissions
    match /questionnaires/{questionnaireId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Community Posts Rules
    match /posts/{postId} {
      // Any authenticated user can read all posts.
      allow read: if request.auth != null;
      
      // Users can only create posts for themselves.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.authorId;

      // The post author or an owner can delete their post.
      allow delete: if request.auth != null && (request.auth.uid == resource.data.authorId || request.auth.token.email == 'ahsanimamkhan06@gmail.com');
      
      // Allow a user to update a post ONLY if they are just incrementing the comment count.
      allow update: if request.auth != null && request.resource.data.commentCount == resource.data.commentCount + 1 && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['commentCount']);

      // Comments subcollection
      match /comments/{commentId} {
        // Any authenticated user can read comments.
        allow read: if request.auth != null;

        // Any authenticated user can create a comment.
        allow create: if request.auth != null && request.auth.uid == request.resource.data.authorId;
        
        // The comment author or an owner can delete or hide/unhide their comment.
        allow delete, update: if request.auth != null && (request.auth.uid == resource.data.authorId || request.auth.token.email == 'ahsanimamkhan06@gmail.com');
      }
    }
  }
}
