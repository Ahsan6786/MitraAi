
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Journal entries can only be accessed by their owner
    match /journalEntries/{entryId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }

    // Community posts can be read by anyone, but only created/updated/deleted by the author
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth.uid == request.resource.data.authorId;

      // Likes and comments can be managed by any authenticated user
      match /likes/{userId} {
        allow read, create, delete: if request.auth.uid == userId;
      }
      match /comments/{commentId} {
        allow read, create: if request.auth != null;
        allow update, delete: if request.auth.uid == resource.data.authorId;
      }
    }
    
    // Friend requests can be created by anyone, but only managed by the recipient.
    match /friendRequests/{requestId} {
      allow read: if request.auth.uid == resource.data.toUserId || request.auth.uid == resource.data.fromUserId;
      allow create: if request.auth.uid == request.resource.data.fromUserId;
      allow update: if request.auth.uid == resource.data.toUserId;
    }
    
    // User data, specifically for the friends list
    match /users/{userId} {
      // Allow a user to read their own friends list.
      match /friends/{friendId} {
        allow read: if request.auth.uid == userId;
        allow write: if request.auth.uid == userId; // Allow users to manage their own friends list
      }
    }
  }
}
