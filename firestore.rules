
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is a member of a group
    function isGroupMember(groupId) {
      return get(/databases/$(database)/documents/groups/$(groupId)).data.members.hasAny([request.auth.uid]);
    }

    // Helper function to check if a user is an admin of a group
    function isGroupAdmin(groupId) {
      // Safely access admins field, default to empty list if it doesn't exist
      let admins = get(/databases/$(database)/documents/groups/$(groupId)).data.get('admins', []);
      return request.auth.uid in admins;
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      // Rules for chat history subcollection
      match /chatHistory/{messageId} {
        allow read, create: if request.auth.uid == userId;
      }
      
      // Rules for friends and friend requests
      match /friends/{friendId} {
        allow read, write, delete: if request.auth.uid == userId;
      }
      
      match /friendRequests/{senderId} {
        allow read, create, delete: if request.auth.uid == userId;
      }
    }
    
    match /counsellors/{counsellorId} {
      allow read; // Anyone can read counsellor profiles
      allow create; // Allow new applications
      allow update, delete: if request.auth.uid == 'L6wAY81UXwOgz5ZGo7LOT8ScV1g2'; // Admin UID
    }

    match /journalEntries/{entryId} {
      allow read, create, delete: if request.auth.uid == resource.data.userId;
      allow update: if request.auth.uid == 'L6wAY81UXwOgz5ZGo7LOT8ScV1g2'; // Admin can update for review
    }
    
    match /questionnaires/{submissionId} {
      allow read, create: if request.auth.uid == resource.data.userId;
      allow update: if request.auth.uid == 'L6wAY81UXwOgz5ZGo7LOT8ScV1g2';
    }

    match /bookings/{bookingId} {
      allow read, create: if request.auth.uid != null;
      allow update: if request.auth.uid == resource.data.student_id || request.auth.uid == resource.data.counsellor_id;
    }

    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.authorId;
      allow update: if request.auth.uid == resource.data.authorId || request.auth.uid == 'L6wAY81UXwOgz5ZGo7LOT8ScV1g2';
      allow delete: if request.auth.uid == resource.data.authorId || request.auth.uid == 'L6wAY81UXwOgz5ZGo7LOT8ScV1g2';

      match /comments/{commentId} {
        allow read, create: if request.auth != null;
        allow delete: if request.auth.uid == resource.data.authorId || request.auth.uid == 'L6wAY81UXwOgz5ZGo7LOT8ScV1g2';
      }
    }

    match /groups/{groupId} {
      allow read: if isGroupMember(groupId);
      allow create: if request.auth.uid != null;
      allow update: if isGroupMember(groupId);

      match /messages/{messageId} {
        allow read, create: if isGroupMember(groupId);
      }
    }
  }
}
