
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.token.email == 'ahsan.khan@mitwpu.edu.in';
    }

    match /counsellors/{counsellorId} {
      // Allow any authenticated user to create their own counsellor application.
      allow create: if request.auth != null && request.auth.uid == counsellorId
                      && request.resource.data.status == 'pending';
                      
      // Allow admins to read/list all counsellor docs.
      // Allow authenticated users to read their own counsellor doc.
      allow read, list: if isAdmin() || (request.auth != null && request.auth.uid == counsellorId);
      
      // Allow admins to update counsellor docs.
      allow update: if isAdmin();
    }

    match /journalEntries/{entryId} {
        // Allow users to manage their own journal entries.
        allow read, write, delete: if request.auth != null && request.auth.uid == resource.data.userId;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    match /questionnaires/{questionnaireId} {
        // Allow users to manage their own questionnaires.
        allow read, write, delete: if request.auth != null && request.auth.uid == resource.data.userId;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    match /posts/{postId} {
      // Allow any authenticated user to read and create posts.
      allow read, create: if request.auth != null;
      // Allow post author or admin to delete.
      allow delete: if request.auth != null && (request.auth.uid == resource.data.authorId || isAdmin());
      
      match /comments/{commentId} {
        // Allow any authenticated user to read and create comments.
        allow read, create: if request.auth != null;
        // Allow comment author or admin to update/delete.
        allow update, delete: if request.auth != null && (request.auth.uid == resource.data.authorId || isAdmin());
      }
    }
  }
}
