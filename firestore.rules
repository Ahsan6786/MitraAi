rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(doc) {
      return request.auth.uid == doc.data.userId || request.auth.uid == doc.data.authorId || request.auth.uid == doc.data.student_id;
    }
    
    function isAdmin() {
      // Ensure auth is not null before accessing token
      return request.auth != null && request.auth.token.email == 'ahsan.khan@mitwpu.edu.in';
    }

    // Counsellors collection
    match /counsellors/{counsellorId} {
      // Anyone can read the list of approved counsellors
      allow list: if isSignedIn();
      // Only the counsellor themselves or an admin can read a specific counsellor document
      allow get: if isSignedIn() && (request.auth.uid == counsellorId || isAdmin());
      // A user can create their own counsellor application
      allow create: if isSignedIn() && request.auth.uid == counsellorId;
      // Only an admin can update the status of a counsellor
      allow update: if isAdmin();
    }

    // Journal Entries collection
    match /journalEntries/{entryId} {
      // Allow read/write only for the owner of the entry or an admin
      allow read, write: if isSignedIn() && (isOwner(get(path)) || isAdmin());
    }

    // Questionnaires collection
    match /questionnaires/{questionnaireId} {
      // Allow read/write for the owner of the questionnaire or an admin
      allow read, write: if isSignedIn() && (isOwner(get(path)) || isAdmin());
    }

    // Bookings collection
    match /bookings/{bookingId} {
        function isCounsellor() {
            // Ensure auth is not null before checking UID
            return request.auth != null && request.auth.uid == resource.data.counsellor_id;
        }
       // Allow read/write for the student owner, the assigned counsellor, or an admin
       allow read, write: if isSignedIn() && (isOwner(get(path)) || isCounsellor() || isAdmin());
    }
    
    // Posts and Comments
    match /posts/{postId} {
      // Any signed-in user can read posts and create new ones
      allow read, create: if isSignedIn();
      
      // Only the author or an admin can delete a post
      allow delete: if isSignedIn() && (isOwner(get(path)) || isAdmin());
      
      // Allow any signed-in user to update only the commentCount field
      allow update: if isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['commentCount']);

      match /comments/{commentId} {
        // Any signed-in user can read and create comments
        allow read, create: if isSignedIn();
        
        // Only the comment author or an admin can delete a comment
        allow delete: if isSignedIn() && (isOwner(get(path)) || isAdmin());

        // Allow an admin to update the 'hidden' field of a comment
        allow update: if isAdmin() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['hidden']);
      }
    }
  }
}
