
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Admins can read/write anything
    match /{path=**} {
      allow read, write: if request.auth != null && request.auth.token.email == 'ahsan.khan@mitwpu.edu.in';
    }

    // Counsellors collection
    match /counsellors/{counsellorId} {
      // Anyone can read approved counsellors for booking
      allow read: if isSignedIn() && resource.data.status == 'approved';
      // Only admin can create, update, or delete counsellor documents
      allow create, update, delete: if request.auth != null && request.auth.token.email == 'ahsan.khan@mitwpu.edu.in';
    }
    
    // Allow listing of approved counsellors
    match /counsellors {
        allow list: if isSignedIn();
    }

    // Posts and Comments
    match /posts/{postId} {
      allow read: if isSignedIn();
      allow create: if isOwner(request.resource.data.authorId);
      allow delete: if isOwner(resource.data.authorId);
      // Allow any signed-in user to update a post ONLY to increment the commentCount.
      allow update: if isSignedIn() 
                    && request.resource.data.diff(resource.data).affectedKeys()
                       .hasOnly(['commentCount']);
    }

    match /posts/{postId}/comments/{commentId} {
      allow read: if isSignedIn();
      allow create: if isOwner(request.resource.data.authorId);
      // Allow a user to delete their own comment.
      allow delete: if isOwner(resource.data.authorId);
    }

    // User-specific data collections
    match /journalEntries/{entryId} {
      allow read, write: if isOwner(resource.data.userId);
    }
     match /journalEntries {
      allow list: if isSignedIn() && request.query.where.get("userId") == request.auth.uid;
    }

    match /questionnaires/{submissionId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /questionnaires {
       allow list: if isSignedIn() && request.query.where.get("userId") == request.auth.uid;
    }

    match /bookings/{bookingId} {
      allow read, write: if isOwner(resource.data.student_id);
    }
    match /bookings {
      allow list: if isSignedIn() && request.query.where.get("student_id") == request.auth.uid;
    }
  }
}
