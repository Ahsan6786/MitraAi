rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles
    function isOwner(docData) {
      return request.auth.uid == docData.userId || request.auth.uid == docData.authorId || request.auth.uid == docData.student_id;
    }

    function isAdmin() {
      return request.auth.token.email == 'ahsan.khan@mitwpu.edu.in';
    }

    function isApprovedCounsellor() {
      return exists(/databases/$(database)/documents/counsellors/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/counsellors/$(request.auth.uid)).data.status == 'approved';
    }
    
    function isFriend(userId1, userId2) {
      return exists(/databases/$(database)/documents/users/$(userId1)/friends/$(userId2));
    }
    
    function isGroupAdmin(groupId) {
      let group = get(/databases/$(database)/documents/groups/$(groupId)).data;
      return request.auth.uid == group.createdBy || (request.auth.uid in group.admins);
    }

    // USERS (for profile data like companionName)
    match /users/{userId} {
      // Users can read and write their own profile document.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Any authenticated user can read public profile data (displayName, email) for friend requests.
      allow get: if request.auth != null;
      
      // FRIEND REQUESTS SUBCOLLECTION
      match /friendRequests/{senderId} {
        // Logged-in users can send a request (create a doc in the recipient's subcollection).
        allow create: if request.auth != null && request.auth.uid == senderId;
        // The recipient can read/delete their own requests.
        allow read, delete: if request.auth != null && request.auth.uid == userId;
        // Any logged-in user can check if they have a pending request with another user.
        allow get: if request.auth != null && (request.auth.uid == userId || request.auth.uid == senderId);
        // Allow a user to list their own friend requests
        allow list: if request.auth != null && request.auth.uid == userId;
      }
      
      // FRIENDS SUBCOLLECTION
      match /friends/{friendId} {
         // Users can read their own friends list.
        allow read: if request.auth != null && request.auth.uid == userId;
        // Any logged-in user can check if they are friends with another user
        allow get: if request.auth != null && (request.auth.uid == userId || request.auth.uid == friendId);
        // This rule allows the batch write to happen when a request is accepted.
        // Also allows a user to delete a friend.
        allow write, delete: if request.auth != null && (request.auth.uid == userId || request.auth.uid == friendId);
      }

      // CHAT HISTORY SUBCOLLECTION
      match /chatHistory/{messageId} {
        // Users can read and create messages in their own chat history.
        allow read, create: if request.auth != null && request.auth.uid == userId;
        // Nobody can update or delete messages.
        allow update, delete: if false;
      }
    }

    // JOURNAL ENTRIES
    // Users can only access their own entries. Admin can read/update for review.
    match /journalEntries/{entryId} {
      allow read, update, delete: if request.auth != null && isOwner(resource.data);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow list: if request.auth != null && request.query.get('userId') == request.auth.uid;
      
      // Admin permissions for review
      allow get, list, update: if request.auth != null && isAdmin();
    }

    // QUESTIONNAIRES
    // Users can only access their own. Admin can read/update for review.
    match /questionnaires/{questionnaireId} {
      allow read, update, delete: if request.auth != null && isOwner(resource.data);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow list: if request.auth != null && request.query.get('userId') == request.auth.uid;

      // Admin permissions for review
      allow get, list, update: if request.auth != null && isAdmin();
    }

    // COUNSELLORS
    // Any authenticated user can read the list of approved counsellors.
    // Admin can manage counsellor documents.
    match /counsellors/{counsellorId} {
      allow read: if request.auth != null; // Allows role checks and listing for booking
      allow create: if request.auth != null; // Allow new applications
      allow update, delete: if request.auth != null && isAdmin();
    }

    // BOOKINGS
    // Users can manage their own bookings. Counsellors can manage theirs.
    match /bookings/{bookingId} {
      allow read, update: if request.auth != null && (isOwner(resource.data) || (isApprovedCounsellor() && resource.data.counsellor_id == request.auth.uid));
      // Allow creation for both normal and anonymous bookings
      allow create: if request.auth != null && (request.resource.data.student_id == request.auth.uid || request.resource.data.is_anonymous == true);
      allow list: if request.auth != null && (request.query.get('student_id') == request.auth.uid || (isApprovedCounsellor() && request.query.get('counsellor_id') == request.auth.uid));
    }

    // POSTS
    // Authenticated users can read/create. Owners or admin can delete.
    // Any user can update the commentCount, likeCount, and likedBy fields.
    match /posts/{postId} {
      allow read, create: if request.auth != null;
      allow update: if request.auth != null && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['commentCount', 'likeCount', 'likedBy']);
      allow delete: if request.auth != null && (isOwner(resource.data) || isAdmin());

      // COMMENTS SUBCOLLECTION
      match /comments/{commentId} {
        allow read, create: if request.auth != null;
        allow update: if request.auth != null && isAdmin(); // Admin can hide comments
        allow delete: if request.auth != null && (isOwner(resource.data) || isAdmin());
      }
    }
    
    // GROUPS
    match /groups/{groupId} {
      allow create: if request.auth != null;
      allow read, update, list: if request.auth != null && resource.data.members.hasAny([request.auth.uid]);
      allow delete: if request.auth != null && isGroupAdmin(groupId);
    
      // MESSAGES SUBCOLLECTION
      match /messages/{messageId} {
        allow read, create: if request.auth != null && get(/databases/$(database)/documents/groups/$(groupId)).data.members.hasAny([request.auth.uid]);
        allow delete: if request.auth != null && (request.auth.uid == resource.data.senderId || isGroupAdmin(groupId));
      }
    }
  }
}
