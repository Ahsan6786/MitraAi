rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // A function to check if the user is the designated admin
    function isAdmin() {
      return request.auth.token.email == 'ahsan.khan@mitwpu.edu.in';
    }
    
    // A function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Rules for the journalEntries collection
    match /journalEntries/{entryId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read: if (isAuthenticated() && resource.data.userId == request.auth.uid) || isAdmin();
      allow update: if isAdmin();
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Rules for the questionnaires collection
    match /questionnaires/{questionnaireId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read: if (isAuthenticated() && resource.data.userId == request.auth.uid) || isAdmin();
      allow update: if isAdmin();
      allow delete: if false;
    }

    // Rules for the community posts collection
    match /posts/{postId} {
      // Any authenticated user can read all posts
      allow list, get: if isAuthenticated();
      
      // Any authenticated user can create a post
      allow create: if isAuthenticated() && request.resource.data.authorId == request.auth.uid;

      // Users can delete their own posts. Admin can delete any post.
      allow delete: if isAuthenticated() && (resource.data.authorId == request.auth.uid || isAdmin());
      
      // Allow Cloud Functions (or admin) to update comment counts
      allow update: if isAdmin();

      // Rules for the comments subcollection
      match /comments/{commentId} {
        // Any authenticated user can read comments
        allow list, get: if isAuthenticated();

        // Any authenticated user can create a comment
        allow create: if isAuthenticated() && request.resource.data.authorId == request.auth.uid;

        // Users can delete their own comments. Admin can delete any comment.
        allow delete: if isAuthenticated() && (resource.data.authorId == request.auth.uid || isAdmin());
        
        // Admin can update comments (to hide them)
        allow update: if isAdmin();
      }
    }
  }
}
