
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'ahsan.khan@mitwpu.edu.in';
    }

    function isApprovedCounsellor() {
      return isSignedIn() && exists(/databases/$(database)/documents/counsellors/$(request.auth.uid))
             && get(/databases/$(database)/documents/counsellors/$(request.auth.uid)).data.status == 'approved';
    }
    
    // PUBLIC: Logged-in users can read the list of approved counsellors
    match /counsellors/{counsellorId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); // Counsellors can sign up
      allow update, delete: if isAdmin(); // Only admin can approve/manage
    }

    // USER-OWNED: Users can only access their own documents
    match /journalEntries/{entryId} {
      allow read, write: if isOwner(resource.data.userId);
      allow list: if isSignedIn() && request.query.where.get('userId') == request.auth.uid;
    }

    match /questionnaires/{questionnaireId} {
       allow read, write: if isOwner(resource.data.userId);
       allow list: if isSignedIn() && request.query.where.get('userId') == request.auth.uid;
    }

    match /bookings/{bookingId} {
       allow create: if isOwner(request.resource.data.student_id);
       allow read: if isOwner(resource.data.student_id) || (isApprovedCounsellor() && resource.data.counsellor_id == request.auth.uid);
       allow update: if isApprovedCounsellor() && resource.data.counsellor_id == request.auth.uid;
       allow list: if isSignedIn() && (request.query.where.get('student_id') == request.auth.uid || request.query.where.get('counsellor_id') == request.auth.uid);
    }

    // COMMUNITY: Logged-in users can read/write, but only delete their own posts/comments
    match /posts/{postId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isOwner(resource.data.authorId) || isAdmin();

      match /comments/{commentId} {
        allow read, create: if isSignedIn();
        allow update, delete: if isOwner(resource.data.authorId) || isAdmin();
      }
    }
  }
}
