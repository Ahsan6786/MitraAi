rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if the user making the request is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Counsellors can be read by any signed-in user for booking purposes
    // New counsellor applications are created from the client, status is 'pending' by default.
    match /counsellors/{counsellorId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); // Allows new counsellors to sign up
      // Only an admin (not defined in rules, managed via backend/console) should approve
      allow update, delete: if false; 
    }

    // Users can only read/write their own documents
    match /journalEntries/{entryId} {
      allow read, update, delete: if isSignedIn() && isOwner(resource.data.userId);
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
    }

    match /questionnaires/{questionnaireId} {
      allow read, update, delete: if isSignedIn() && isOwner(resource.data.userId);
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
    }
    
    match /bookings/{bookingId} {
      // Students can manage their own bookings
      allow read: if isSignedIn() && (isOwner(resource.data.student_id) || request.auth.uid == resource.data.counsellor_id);
      allow create: if isSignedIn() && isOwner(request.resource.data.student_id);
      
      // Counsellors can only update bookings assigned to them
      allow update: if isSignedIn() && request.auth.uid == resource.data.counsellor_id;
      
      // No one can delete bookings from the client to preserve history
      allow delete: if false;
    }

    // Community Posts and Comments
    match /posts/{postId} {
      // Any signed-in user can read posts
      allow read: if isSignedIn();
      
      // Users can create posts for themselves
      allow create: if isSignedIn() && isOwner(request.resource.data.authorId);
      
      // Users can only delete their own posts
      allow delete: if isSignedIn() && isOwner(resource.data.authorId);
      
      // Any signed-in user can update ONLY the commentCount.
      // They cannot change any other field.
      allow update: if isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['commentCount']);

      // Comments subcollection
      match /comments/{commentId} {
        // Any signed-in user can read comments
        allow read: if isSignedIn();
        
        // Users can create comments for themselves
        allow create: if isSignedIn() && isOwner(request.resource.data.authorId);
        
        // Users can only delete their own comments.
        // A rule for a moderator/owner to hide comments would be added here if needed.
        allow update, delete: if isSignedIn() && isOwner(resource.data.authorId);
      }
    }
  }
}
