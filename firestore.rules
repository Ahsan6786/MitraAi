
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function for admin check
    function isAdmin() {
      return request.auth.token.email == 'ahsan.khan@mitwpu.edu.in';
    }

    // Rules for journalEntries collection
    match /journalEntries/{entryId} {
      // Admin can read/write everything
      allow read, write: if isAdmin();
      
      // Users can create, read, update, and delete their own entries
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Rules for posts collection
    match /posts/{postId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;

      // Rules for comments subcollection
      match /comments/{commentId} {
        allow read, create: if request.auth != null;
        allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
      }
    }

    // Recursive delete function for posts and their comments
    function recursiveDelete(path) {
      return {
        "allow delete": if get(path).data.authorId == request.auth.uid,
        "match /comments/{commentId}": {
          "allow delete": if true
        }
      };
    }
  }
}
