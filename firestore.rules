
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin
    function isAdmin() {
      return request.auth.token.email == 'ahsan.khan@mitwpu.edu.in';
    }

    // Counsellors Collection
    match /counsellors/{counsellorId} {
      // Allow creation only if the user is creating their own record with 'pending' status
      allow create: if request.auth != null && request.auth.uid == counsellorId && request.resource.data.status == 'pending';
      
      // Allow admin to do anything
      allow read, list, update, delete: if isAdmin();
      
      // Allow authenticated counsellors to read their own profile
      allow get: if request.auth != null && request.auth.uid == counsellorId;
      
      // Allow any authenticated user to read counsellor profiles for booking
      allow list, get: if request.auth != null;
    }

    // Journal Entries
    match /journalEntries/{entryId} {
      allow read, create, delete: if request.auth.uid == request.resource.data.userId;
      // Admin can read all entries
      allow read, list, update: if isAdmin();
    }

    // Questionnaires
    match /questionnaires/{questionnaireId} {
      allow read, create: if request.auth.uid == request.resource.data.userId;
      // Admin can read and update all questionnaires
      allow read, list, update: if isAdmin();
    }

    // Community Posts and Comments
    match /posts/{postId} {
      allow read, list: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.authorId;
      allow delete: if request.auth.uid == resource.data.authorId || isAdmin();
      allow update: if request.auth.uid == resource.data.authorId;

      match /comments/{commentId} {
        allow read, list: if request.auth != null;
        allow create: if request.auth.uid == request.resource.data.authorId;
        allow delete: if request.auth.uid == resource.data.authorId || isAdmin();
        allow update: if isAdmin(); // Only admin can hide/unhide comments
      }
    }
    
    // Bookings Collection
    match /bookings/{bookingId} {
      // Allow users to create bookings for themselves
      allow create: if request.auth != null && request.auth.uid == request.resource.data.student_id;
      
      // Allow users to read their own bookings
      allow read, list: if request.auth != null && request.auth.uid == resource.data.student_id;
      
      // Allow counsellors to read and update bookings assigned to them
      allow read, list, update: if request.auth != null && request.auth.uid == resource.data.counsellor_id;
    }
  }
}
