
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return request.auth.token.email == 'ahsan.khan@mitwpu.edu.in';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for journalEntries collection
    match /journalEntries/{entryId} {
      // Admin can do anything
      allow read, write: if isAdmin();
      
      // Users can create entries for themselves
      allow create: if request.auth != null && isOwner(request.resource.data.userId);

      // Users can read, update, and delete their own entries
      allow read, update, delete: if request.auth != null && isOwner(resource.data.userId);
    }

    // Rules for posts collection
    match /posts/{postId} {
      // Any authenticated user can read all posts
      allow read: if request.auth != null;
      
      // Users can create posts for themselves
      allow create: if request.auth != null && isOwner(request.resource.data.authorId);
      
      // Users can only delete their own posts
      allow delete: if request.auth != null && isOwner(resource.data.authorId);

      // Users can update the comment count on any post (needed for creating comments)
      allow update: if request.auth != null;

      // Rules for comments sub-collection
      match /comments/{commentId} {
        // Any authenticated user can read comments
        allow read: if request.auth != null;
        
        // Any authenticated user can create a comment
        allow create: if request.auth != null;
        
        // Comments cannot be updated or deleted by users through the app
        allow update, delete: if false;
      }
    }
  }
}
