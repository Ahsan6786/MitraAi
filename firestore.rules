
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow any authenticated user to read/write/delete any post or comment
    match /posts/{postId}/{documents=**} {
       allow read, write, delete: if request.auth.uid != null;
    }

    // Allow authenticated users to create and manage their own journal entries
    match /journalEntries/{entryId} {
      allow read, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
      
      // Allow the admin to read and write/update any journal entry
      allow read, write: if request.auth.token.email == 'ahsan.khan@mitwpu.edu.in';
    }
  }
}
