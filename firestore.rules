rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isOwner() {
      return request.auth.token.email == 'ahsanimamkhan06@gmail.com';
    }
  
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth.uid == resource.data.authorId;
      allow delete: if request.auth.uid == resource.data.authorId || isOwner();

      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null;
        // Only the comment author or the post owner can delete comments.
        allow delete: if request.auth.uid == resource.data.authorId || isOwner();
      }
    }
  }
}
